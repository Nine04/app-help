<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_pasien_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tx_nama_pasien_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Dr. Agus Hartono"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_pasien_profil"
        app:layout_constraintTop_toBottomOf="@+id/tx_id_pasien_profil" />

    <TextView
        android:id="@+id/tx_id_pasien_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="2131231421"
        app:layout_constraintStart_toEndOf="@+id/img_pasien_profil"
        app:layout_constraintTop_toTopOf="@+id/img_pasien_profil" />

    <TextView
        android:id="@+id/tx_email_pasien_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Agushartono@gmail.com"
        app:layout_constraintStart_toStartOf="@+id/tx_nama_pasien_profil"
        app:layout_constraintTop_toBottomOf="@+id/tx_nama_pasien_profil" />

    <TextView
        android:id="@+id/tx_hp_pasien_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="08123123124"
        app:layout_constraintStart_toStartOf="@+id/tx_email_pasien_profil"
        app:layout_constraintTop_toBottomOf="@+id/tx_email_pasien_profil" />

    <TextView
        android:id="@+id/tx_alamat_pasien_profil"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Jl. Kebangsaan No. 50, Desa Kagungan, Kecamatan Tanjung Perak, Surabaya, Jawa Timur, Indonesia"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/img_pasien_profil"
        app:layout_constraintTop_toBottomOf="@+id/img_pasien_profil" />

    <TextView
        android:id="@+id/tx_tensi_pasien_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tensi : 121"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tx_alamat_pasien_profil"
        app:layout_constraintTop_toBottomOf="@+id/tx_alamat_pasien_profil" />

    <TextView
        android:id="@+id/tx_goldar_pasien_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goldar : B"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tx_tinggi_pasien_profil"
        app:layout_constraintTop_toTopOf="@+id/tx_tensi_pasien_profil" />

    <TextView
        android:id="@+id/tx_tinggi_pasien_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Tinggi : 180 Cm"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tx_berat_pasien_profil"
        app:layout_constraintTop_toTopOf="@+id/tx_berat_pasien_profil" />

    <TextView
        android:id="@+id/tx_berat_pasien_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Berat : 70 Kg"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tx_tensi_pasien_profil"
        app:layout_constraintTop_toBottomOf="@+id/tx_tensi_pasien_profil" />

    <TextView
        android:id="@+id/tx_ekg_pasien_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="EKG : 80/s"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tx_tinggi_pasien_profil"
        app:layout_constraintTop_toTopOf="@+id/tx_goldar_pasien_profil" />

    <TextView
        android:id="@+id/tx_penyakit_pasien_profil"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Stroke, Diabetes, Lemah Jantung, Depresi, Schizophrenia, Anxiety, Panic Attack"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tx_berat_pasien_profil"
        app:layout_constraintTop_toBottomOf="@+id/tx_berat_pasien_profil" />

    <Button
        android:id="@+id/btn_editProfil_pasien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Edit Profil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_editPw_pasien" />

    <Button
        android:id="@+id/btn_editPw_pasien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Password"
        app:layout_constraintBottom_toBottomOf="@+id/btn_editProfil_pasien"
        app:layout_constraintEnd_toStartOf="@+id/btn_editProfil_pasien"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_editProfil_pasien" />
</androidx.constraintlayout.widget.ConstraintLayout>