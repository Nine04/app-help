<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLReseps"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_reseps_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tx_nama_reseps_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Dr. Agus Hartono"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_reseps_row"
        app:layout_constraintTop_toBottomOf="@+id/tx_id_reseps_row" />

    <TextView
        android:id="@+id/tx_id_reseps_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="2131231421"
        android:textColor="#3D5AFE"
        app:layout_constraintStart_toEndOf="@+id/img_reseps_row"
        app:layout_constraintTop_toTopOf="@+id/img_reseps_row" />

    <TextView
        android:id="@+id/tx_email_reseps_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Agushartono@gmail.com"
        app:layout_constraintStart_toStartOf="@+id/tx_nama_reseps_row"
        app:layout_constraintTop_toBottomOf="@+id/tx_nama_reseps_row" />

    <TextView
        android:id="@+id/tx_hp_reseps_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="08123123124"
        app:layout_constraintStart_toStartOf="@+id/tx_email_reseps_row"
        app:layout_constraintTop_toBottomOf="@+id/tx_email_reseps_row" />

</androidx.constraintlayout.widget.ConstraintLayout>