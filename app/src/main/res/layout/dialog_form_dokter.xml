<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvFormDokter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:text="Form Dokter"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Id : "
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/idFormDokter"
        app:layout_constraintTop_toTopOf="@+id/tvFormDokter" />

    <TextView
        android:id="@+id/idFormDokter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="serif"
        android:text="Id"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvFormDokter" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFormDokter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext2"
            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:id="@+id/namaFormDokter"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/custom_edittext3"
                android:hint="Isi Nama Dokter"
                android:padding="8dp" />

            <EditText
                android:id="@+id/alamatFormDokter"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext3"
                android:hint="Isi Alamat"
                android:padding="8dp" />

            <EditText
                android:id="@+id/noTelpFormDokter"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext3"
                android:hint="Isi No HP"
                android:padding="8dp" />

            <EditText
                android:id="@+id/speisialisFormDokter"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext3"
                android:hint="Isi spesialis"
                android:padding="8dp" />

            <EditText
                android:id="@+id/emailFormDokter"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext3"
                android:hint="Isi Email"
                android:padding="8dp" />

            <EditText
                android:id="@+id/passFormDokter"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext3"
                android:hint="Isi Password"
                android:inputType="textPassword"
                android:padding="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>