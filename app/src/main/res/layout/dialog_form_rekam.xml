<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/TextViewFormRekam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Form Rekam"
        android:textAlignment="center"
        android:textColor="@color/lavender"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvFormRekam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp"
        android:fontFamily="sans-serif-light"
        android:text="Id : "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/TextViewFormRekam"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/idFormRekam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-light"
        android:text="Id"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tvFormRekam"
        app:layout_constraintStart_toEndOf="@id/tvFormRekam"/>

    <TextView
        android:id="@+id/tglFormRekam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="18dp"
        android:fontFamily="serif-monospace"
        android:text="Tanggal"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/TextViewFormRekam"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvFormRekam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-light"
        android:text="Dokter : "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFormRekam"
        app:layout_constraintStart_toStartOf="@id/tvFormRekam"/>

    <TextView
        android:id="@+id/dokterFormRekam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-light"
        android:text="Dr. Alfian"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tvFormRekam2"
        app:layout_constraintStart_toEndOf="@id/tvFormRekam2"/>

    <TextView
        android:id="@+id/tvFormRekam3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-light"
        android:text="Pasien : "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFormRekam2"
        app:layout_constraintStart_toStartOf="@id/tvFormRekam2"/>

    <TextView
        android:id="@+id/pasienFormRekam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:fontFamily="sans-serif-light"
        android:text="Navio "
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tvFormRekam3"
        app:layout_constraintStart_toEndOf="@id/tvFormRekam3"/>

    <TextView
        android:id="@+id/tvFormRekam4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-light"
        android:text="Keluhan : "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFormRekam3"
        app:layout_constraintStart_toStartOf="@id/tvFormRekam3"/>

    <EditText
        android:id="@+id/keluhanFormRekam"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/custom_edittext"
        android:hint="Isi Keluhan"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/tvFormRekam4"
        app:layout_constraintStart_toEndOf="@id/tvFormRekam4"/>

    <TextView
        android:id="@+id/tvFormRekam5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-light"
        android:text="Diagnosa : "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFormRekam4"
        app:layout_constraintStart_toStartOf="@id/tvFormRekam4"/>

    <EditText
        android:id="@+id/diagnosaFormRekam"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/custom_edittext"
        android:hint="Isi Diagnosa"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/tvFormRekam5"
        app:layout_constraintStart_toEndOf="@id/tvFormRekam5"/>

    <Button
        android:id="@+id/btnAddRekam_Form"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/baseline_add_24"
        android:padding="13dp"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toTopOf="@id/diagnosaFormRekam"
        app:layout_constraintStart_toEndOf="@id/diagnosaFormRekam"/>

    <TextView
        android:id="@+id/tvFormRekam6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-light"
        android:text="Arahan Dokter : "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFormRekam5"
        app:layout_constraintStart_toStartOf="@id/tvFormRekam5"/>

    <EditText
        android:id="@+id/arahanFormRekam"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/custom_edittext"
        android:hint="Isi Arahan Dokter"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFormRekam6"
        app:layout_constraintStart_toStartOf="@id/tvFormRekam6"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Rc_CrudDiagnosa"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arahanFormRekam" />


</androidx.constraintlayout.widget.ConstraintLayout>